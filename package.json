{
  "name": "speakeasy-hono",
  "type": "module",
  "scripts": {
    "start": "vercel dev",
    "build": "tsup ./api/index.ts -d dist --clean --external @mapbox",
    "lint": "eslint .",
    "format": "prettier --write .",
    "gen:openapi": "tsx src/scripts/gen-openapi.ts",
    "gen:apikey": "tsx src/scripts/gen-api-key.ts",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "prettier --write --ignore-unknown",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.36.0",
    "hono": "^4.6.9",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@hono/node-server": "^1.13.5",
    "@hono/swagger-ui": "^0.4.1",
    "@hono/zod-openapi": "^0.16.4",
    "@types/bcrypt": "^5.0.2",
    "@types/dotenv": "^8.2.3",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.11.10",
    "bcrypt": "^5.1.1",
    "drizzle-kit": "^0.28.0",
    "drizzle-zod": "^0.5.1",
    "eslint": "^9.14.0",
    "globals": "^15.12.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "tsup": "^8.3.5",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0",
    "vercel": "^37.14.0"
  }
}
