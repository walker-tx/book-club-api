{
  "openapi": "3.0.0",
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ],
  "info": {
    "version": "1.0.0",
    "title": "Book API"
  },
  "tags": [
    {
      "name": "Book"
    },
    {
      "name": "Auth"
    },
    {
      "name": "User"
    },
    {
      "name": "Library"
    }
  ],
  "x-speakeasy-retries": {
    "strategy": "backoff",
    "backoff": {
      "initialInterval": 500,
      "maxInterval": 60000,
      "maxElapsedTime": 3600000,
      "exponent": 1.5
    },
    "statusCodes": [
      "5XX"
    ],
    "retryConnectionErrors": true
  },
  "components": {
    "schemas": {
      "Book": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "author": {
            "type": "string",
            "minLength": 1
          },
          "isbn10": {
            "type": "string",
            "minLength": 10,
            "maxLength": 10
          }
        },
        "required": [
          "id",
          "title",
          "author",
          "isbn10"
        ],
        "example": {
          "id": 1,
          "title": "Frankenstein",
          "author": "Mary Shelley",
          "isbn10": "1234567890"
        }
      },
      "PaginatedBookResponse": {
        "type": "object",
        "properties": {
          "next": {
            "type": "string",
            "nullable": true
          },
          "previous": {
            "type": "string",
            "nullable": true
          },
          "results": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Book"
            }
          }
        },
        "required": [
          "next",
          "previous",
          "results"
        ],
        "example": {
          "next": "https://api.example.com/endpoint?limit=10&offset=10",
          "previous": null,
          "results": [
            {
              "id": 1,
              "title": "Frankenstein",
              "author": "Mary Shelley",
              "isbn10": "1234567890"
            }
          ]
        }
      },
      "Error": {
        "type": "object",
        "properties": {
          "code": {
            "type": "number"
          },
          "message": {
            "type": "string"
          }
        },
        "required": [
          "code",
          "message"
        ],
        "example": {
          "code": 400,
          "message": "Bad Request"
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "username": {
            "type": "string",
            "minLength": 1
          },
          "email": {
            "type": "string",
            "format": "email"
          }
        },
        "required": [
          "id",
          "username",
          "email"
        ],
        "example": {
          "id": 1,
          "username": "john_doe",
          "email": "john_doe@example.com"
        }
      }
    },
    "parameters": {}
  },
  "paths": {
    "/book": {
      "get": {
        "description": "List all books",
        "tags": [
          "Book"
        ],
        "operationId": "listBooks",
        "x-speakeasy-name-override": "list",
        "x-speakeasy-pagination": {
          "type": "offsetLimit",
          "inputs": [
            {
              "name": "offset",
              "in": "parameters",
              "type": "offset"
            }
          ],
          "outputs": {
            "results": "$.results"
          }
        },
        "parameters": [
          {
            "schema": {
              "type": "integer",
              "minimum": 1,
              "exclusiveMinimum": true,
              "default": 10,
              "example": 10
            },
            "required": false,
            "name": "limit",
            "in": "query"
          },
          {
            "schema": {
              "type": "integer",
              "nullable": true,
              "minimum": 0,
              "default": 0,
              "example": 0
            },
            "required": false,
            "name": "offset",
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "Books found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PaginatedBookResponse"
                },
                "example": {
                  "next": "https://api.example.com/endpoint?limit=10&offset=10",
                  "previous": null,
                  "results": [
                    {
                      "id": 1,
                      "title": "Frankenstein",
                      "author": "Mary Shelley",
                      "isbn10": "1234567890"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "description": "Create a book",
        "tags": [
          "Book"
        ],
        "operationId": "createBook",
        "x-speakeasy-name-override": "create",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "minLength": 1
                  },
                  "author": {
                    "type": "string",
                    "minLength": 1
                  },
                  "isbn10": {
                    "type": "string",
                    "minLength": 10,
                    "maxLength": 10
                  }
                },
                "required": [
                  "title",
                  "author",
                  "isbn10"
                ],
                "example": {
                  "title": "Frankenstein",
                  "author": "Mary Shelley",
                  "isbn10": "0143131842"
                }
              },
              "example": {
                "title": "Frankenstein",
                "author": "Mary Shelley",
                "isbn10": "0143131842"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Book created",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/book/{id}": {
      "get": {
        "description": "Get a book by ID",
        "tags": [
          "Book"
        ],
        "operationId": "getBook",
        "x-speakeasy-name-override": "get",
        "parameters": [
          {
            "schema": {
              "type": "number",
              "minimum": 0,
              "exclusiveMinimum": true,
              "example": 123
            },
            "required": true,
            "name": "id",
            "in": "path"
          }
        ],
        "responses": {
          "200": {
            "description": "Books found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Book"
                },
                "example": {
                  "id": 1,
                  "title": "Frankenstein",
                  "author": "Mary Shelley",
                  "isbn10": "1234567890"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Book not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "delete": {
        "description": "Delete a book",
        "tags": [
          "Book"
        ],
        "operationId": "deleteBook",
        "x-speakeasy-name-override": "delete",
        "parameters": [
          {
            "schema": {
              "type": "number",
              "minimum": 0,
              "exclusiveMinimum": true,
              "example": 123
            },
            "required": true,
            "name": "id",
            "in": "path"
          }
        ],
        "responses": {
          "200": {
            "description": "Book deleted"
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "Book not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/signup": {
      "post": {
        "description": "Sign up",
        "tags": [
          "Auth"
        ],
        "operationId": "signup",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string",
                    "minLength": 1,
                    "maxLength": 255,
                    "example": "jdoe123"
                  },
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "jdoe123@email.com"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 8,
                    "example": "mrg.qka5awy2jya*FTK"
                  }
                },
                "required": [
                  "username",
                  "email",
                  "password"
                ],
                "example": {
                  "username": "jdoe123",
                  "email": "jdoe123@email.com",
                  "password": "mrg.qka5awy2jya*FTK"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "User created"
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "description": "Log in",
        "tags": [
          "Auth"
        ],
        "operationId": "login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "jdoe123@email.com"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 8,
                    "example": "mrg.qka5awy2jya*FTK"
                  }
                },
                "required": [
                  "email",
                  "password"
                ],
                "example": {
                  "email": "jdoe123@email.com",
                  "password": "mrg.qka5awy2jya*FTK"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User logged in",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciO..."
                    }
                  },
                  "required": [
                    "token"
                  ],
                  "example": {
                    "token": "eyJhbGci..."
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/user/{id}": {
      "get": {
        "description": "Get a user by ID",
        "tags": [
          "User"
        ],
        "operationId": "getUser",
        "x-speakeasy-name-override": "get",
        "parameters": [
          {
            "schema": {
              "type": "number",
              "minimum": 0,
              "exclusiveMinimum": true,
              "example": 123
            },
            "required": true,
            "name": "id",
            "in": "path"
          }
        ],
        "responses": {
          "200": {
            "description": "User found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    },
    "/user/{userId}/library": {
      "get": {
        "description": "List books by user",
        "tags": [
          "Library"
        ],
        "operationId": "getUserLibrary",
        "x-speakeasy-name-override": "get",
        "x-speakeasy-pagination": {
          "type": "offsetLimit",
          "inputs": [
            {
              "name": "offset",
              "in": "parameters",
              "type": "offset"
            }
          ],
          "outputs": {
            "results": "$.results"
          }
        },
        "parameters": [
          {
            "schema": {
              "type": "number",
              "minimum": 0,
              "exclusiveMinimum": true,
              "example": 123
            },
            "required": true,
            "name": "userId",
            "in": "path"
          },
          {
            "schema": {
              "type": "integer",
              "minimum": 1,
              "exclusiveMinimum": true,
              "default": 10,
              "example": 10
            },
            "required": false,
            "name": "limit",
            "in": "query"
          },
          {
            "schema": {
              "type": "integer",
              "nullable": true,
              "minimum": 0,
              "default": 0,
              "example": 0
            },
            "required": false,
            "name": "offset",
            "in": "query"
          }
        ],
        "responses": {
          "200": {
            "description": "Books found",
            "content": {
              "application/json": {
                "schema": {
                  "allOf": [
                    {
                      "$ref": "#/components/schemas/PaginatedBookResponse"
                    },
                    {
                      "properties": {
                        "next": {
                          "type": "string",
                          "nullable": true
                        },
                        "previous": {
                          "type": "string",
                          "nullable": true
                        },
                        "results": {
                          "type": "array",
                          "items": {
                            "allOf": [
                              {
                                "$ref": "#/components/schemas/Book"
                              },
                              {
                                "nullable": true
                              }
                            ]
                          }
                        }
                      }
                    }
                  ]
                },
                "example": {
                  "next": "https://api.example.com/endpoint?limit=10&offset=10",
                  "previous": null,
                  "results": [
                    {
                      "id": 123,
                      "title": "Frankenstein",
                      "author": "Mary Shelley",
                      "isbn10": "1234567890"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "User not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "description": "Add book to user library",
        "tags": [
          "Library"
        ],
        "operationId": "addBookToUserLibrary",
        "x-speakeasy-name-override": "add",
        "parameters": [
          {
            "schema": {
              "type": "number",
              "minimum": 0,
              "exclusiveMinimum": true,
              "example": 123
            },
            "required": true,
            "name": "userId",
            "in": "path"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "bookId": {
                    "type": "number",
                    "minimum": 0,
                    "exclusiveMinimum": true
                  }
                },
                "required": [
                  "bookId"
                ]
              },
              "example": {
                "bookId": 123
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Book added to user"
          },
          "400": {
            "description": "Bad request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "User or book not found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "409": {
            "description": "Book already added to user",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      }
    }
  }
}